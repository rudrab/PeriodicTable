# Maintainer: fr0xk <skakoty1337@yahoo.com>
pkgname=PeriodicTable
pkgver=0.0.1
pkgrel=1
pkgdesc="A modern Periodic Table, with latest update from IUPAC. It also contains utilities such as Vegards's Law. Many other utilities are on its way."
arch=("x86_64")
url="https://rudrab.github.io/PeriodicTable/"
license=("GPL")
groups=()
depends=('gtk3' 'python-numpy' 'python-matplotlib')
makedepends=('gcc' 'python')
source=("git+https://github.com/rudrab/PeriodicTable.git")
md5sums=(SKIP)

build() {
	cd "$srcdir/$pkgname"
	./autogen.sh
	make
	return 0
}

package() {
	cd "$srcdir/$pkgname"
	make DESTDIR="$pkgdir/" install
	return 0
}
